{
  "AppSettings": {
    "SiteTitle": "Sitecore Commerce Engine",
    "BootStrapFile": "Global",
    "DeploymentId": "Deployment01",
    "EnvironmentName": "HabitatMinions",
    "EncryptionProtectionType": "Machine",
